@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<button class="btn btn-sm btn-primary m-2" id="btnAddEmployee">Çalışan Ekle </button>

<table class="table table-bordered">
    <thead>
        <tr class="text-center">
            <th>Id</th>
            <th>Name</th>
            <th>Age</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Salary</th>
        </tr>
    </thead>
    <tbody class="text-center" id="table_data"></tbody>
</table>

<div class="modal fade modal" id="EmployeeModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="text-info modal-title" id="employeeHeading">Çalışan Ekleme Sayfası</h1>
                <button class="close text-danger" data-dismiss="modal" onclick="HideModalPopUp();">&times;</button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div class="form-group" id="empId">
                        <label>Id</label>
                        <input type="text" class="form-control" id="EmployeeId" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" placeholder="Adı giriniz" class="form-control" id="Name" autocomplete="off" />
                    </div>
                    <div class="form-group">
                        <label>Age</label>
                        <input type="text" placeholder="Yaş giriniz" class="form-control" id="Age" autocomplete="off" />
                    </div>
                    <div class="form-group">
                        <label>Phone</label>
                        <input type="text" placeholder="Telefon Giriniz" class="form-control" id="Phone" autocomplete="off" />
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" placeholder="Email giriniz" class="form-control" id="Email" autocomplete="off" />
                    </div>
                    <div class="form-group">
                        <label>Salary</label>
                        <input type="text" placeholder="Maaş Giriniz" class="form-control" id="Salary" autocomplete="off" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" onclick="AddEmployee();" id="AddEmployee">Kaydet</button>
                <button class="btn btn-warning" onclick="UpdateEmployee();" style="display:none" id="btnUpdate">Güncelle</button>
                <button class="btn btn-danger btn-default" data-dismiss="modal" onclick="HideModalPopUp();">Kapat</button>
            </div>
        </div>
    </div>
</div>

<div>
    <input type="hidden" id="urlEmployeeData" value="@Url.Action("EmployeeList","Employee")" />
</div>




<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/employeem.js"></script>
